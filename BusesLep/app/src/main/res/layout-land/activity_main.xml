<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical"
    android:weightSum="1"
    style="@style/Theme.Lep"
    android:id="@+id/mainScreen">


    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Horarios y Reservas"
        android:id="@+id/button2"
        android:drawableRight="@android:drawable/ic_menu_search"
        android:onClick="launchSearchSchedules"
        android:background="@drawable/border"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp" />

    <Space
        android:layout_width="20dp"
        android:layout_height="20dp" />

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:id="@+id/listView"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/border"
        android:isScrollContainer="false"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="0.68" />

    <Space
        android:layout_width="20dp"
        android:layout_height="20dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="   Ingresar   "
        android:id="@+id/btnLogin"
        android:layout_gravity="center_horizontal|bottom"
        android:windowSoftInputMode="stateHidden"
        android:layout_weight="0.1"
        android:onClick="launchLogin"
        android:background="@drawable/border"
        android:textStyle="bold"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:drawableLeft="@drawable/user_icon"
        android:paddingLeft="20dp"
        android:drawablePadding="-50sp"
        android:singleLine="true" />

    <Space
        android:layout_width="20dp"
        android:layout_height="2dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Registrarme"
        android:id="@+id/btnRegister"
        android:windowSoftInputMode="stateHidden"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_weight="0.1"
        android:onClick="launchRegister"
        android:background="@drawable/border"
        android:textStyle="bold"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

</LinearLayout>
