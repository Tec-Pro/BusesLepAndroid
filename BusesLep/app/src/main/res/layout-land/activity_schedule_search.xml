<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Rio Cuarto - Cordoba"
            android:id="@+id/txt_description_schedule"
            android:layout_gravity="center_horizontal"
            android:background="#c64f3b35"
            android:textColor="#FFFFFF"
            android:textStyle="normal|bold"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:gravity="left|center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Ida"
            android:id="@+id/txt_description_go_ret"
            android:background="#c64f3b35"
            android:textColor="#FFFFFF"
            android:textStyle="normal|bold"
            android:gravity="right"
            android:paddingRight="10dp"
            android:textIsSelectable="false"
            android:textSize="20dp" />
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Ida $150.00"
            android:id="@+id/txt_description_price_go"
            android:layout_gravity="center_horizontal"
            android:background="#86533e38"
            android:textColor="#FFFFFF"
            android:textStyle="normal|bold"
            android:gravity="center"
            android:paddingLeft="10dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Ida y vuelta $285.00"
            android:id="@+id/txt_description_price_go_ret"
            android:background="#86533e38"
            android:textColor="#FFFFFF"
            android:textStyle="normal|bold"
            android:gravity="center|right"
            android:paddingRight="10dp" />
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/list_view_shedule"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.1"
        android:isScrollContainer="false"
        android:layout_marginTop="10px"
        android:layout_marginBottom="10px"
        android:layout_marginLeft="5px"
        android:layout_marginRight="5px" />
</LinearLayout>