<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical"
    android:weightSum="1"
    style="@style/Theme.Lep"
    >


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.4"
        android:background="#282828">

        <ImageView

            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.4"
            android:id="@+id/imageView"
            android:src="@drawable/buseslep"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_margin="0dp" />
    </LinearLayout>


    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Horarios y Reservas"
        android:id="@+id/button2"
        android:drawableLeft="@android:drawable/ic_menu_search"
        android:onClick="launchSearchSchedules" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Ultimas Busquedas"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10px"
        android:layout_marginBottom="10px"
        android:textStyle="bold"
        android:layout_weight="0.1" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="188dp"
        android:id="@+id/listView"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.1"
        android:isScrollContainer="false"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="   Ingresar   "
        android:id="@+id/btnLogin"
        android:layout_gravity="center_horizontal|bottom"
        android:windowSoftInputMode="stateHidden"
        android:layout_weight="0.2"
        android:onClick="launchLogin" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Registrarme"
        android:id="@+id/btnRegister"
        android:windowSoftInputMode="stateHidden"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_weight="0.2"
        android:onClick="launchRegister" />

</LinearLayout>
