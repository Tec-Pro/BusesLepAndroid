<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout_signin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#F7F7F7">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="#F7F7F7">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/scrollView"
            android:background="#F7F7F7">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/textView20" />


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Registo de Usuario"
                android:id="@+id/textView2"
                android:textColor="#ff000000"
                android:textStyle="bold|normal|italic"
                android:layout_gravity="center_horizontal"
                android:elegantTextHeight="false"
                android:gravity="center_horizontal" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/textView13" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint=" Nombre"
                android:id="@+id/txtName"/>


            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint=" Apellido"
                android:id="@+id/txtSurname" />


            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint=" DNI"
                android:id="@+id/textDNI"/>


            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint=" Direcci칩n de correo electr칩nico"
                android:id="@+id/txtEmail"/>


            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint=" Contrase침a"
                android:id="@+id/txtPass"
                android:password="true" />


            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint=" Confirmacion Contrase침a"
                android:id="@+id/txtPassConfirm"
                android:password="true" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/textView9" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/textView12" />


            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Registrarme"
                android:id="@+id/btnJoin"
                android:windowSoftInputMode="stateHidden"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_weight="0"
                android:onClick="singin"
                android:background="@drawable/border"
                android:textStyle="bold"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />
        </LinearLayout>

    </ScrollView>


</LinearLayout>


<ListView
android:id="@+id/options_signin"
android:layout_width="wrap_content"
android:layout_height="match_parent"
android:layout_gravity="start"
android:background="#EEE"
    />

    </android.support.v4.widget.DrawerLayout>